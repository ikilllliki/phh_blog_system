//- 記事投稿用のテンプレート
doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="/bootstrap.css")
    style
      include css/style.css
    script(src="http://code.jquery.com/jquery-1.8.2.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jScrollPane/2.0.23/script/jquery.jscrollpane.min.js")
    script(src="/lifegame.js")
    script $(document).ready(function() {$("#WhatsNewDetailContainer").jScrollPane();return lifeGame = new Lifegame($("#Container"), $("#LifeContainer"));});
    title 記事投稿
  body
    //- include に関しては次のドキュメントを参照のこと
    //- https://pugjs.org/language/includes.html
    include header.pug

    div(id="Container" class="fullContainer")
      div(id="LifeContainer")

      div(class="container")
        h1 投稿
        form(class="form-group" action="/entry/post/add", method="post")
          div(class="row")
            div(class="col-md-7")
              input(class="form-control" type="text" name="title" placeholder="タイトル")
            div(class="col-md-1") タグ 
            div(class="col-md-4")
              select(class="form-control" name="tag")
                each val in tags
                  option(value=val.id) #{val.name}
          div(class="row")
            div(class="col")
              textarea(class="form-control" name="entry" placeholder="記事" rows="8")
          div(class="row")
            div(class="col")
              input(class="btn btn-primary" type="submit" value="投稿")